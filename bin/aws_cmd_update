#!/bin/bash
tmp_dir=$(mktemp -d -t aws-cli-XXXXXX) && \
   cd $tmp_dir || exit

curl "https://awscli.amazonaws.com/awscli-exe-linux-$(uname -p).zip" -o "awscliv2.zip"
unzip -q awscliv2.zip && rm awscliv2.zip
#./aws/install -i ~/aws-cli -b ~/bin --update && rm -rf aws
sudo ./aws/install --bin-dir /usr/local/bin --install-dir /usr/local/aws-cli --update && rm -rf aws
aws --version
cd /tmp
rmdir ${tmp_dir}
